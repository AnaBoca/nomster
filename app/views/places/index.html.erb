<% @places.each do |place| %>
  <div class="booyah-box col-10 offset-1">
    <h1><%= link_to place.name, place_path(place) %></h1>
    <i><%= place.address %></i><br /><br />
    <p><%= place.description %></p><br />

    <% if place.user.present? %>
      <small><%= place.user.email %></small>
    <% end %>

    <% if place.comments.present? %>
      <div class="col-12">
        <blockquote>
          <% if place.comments.last.humanized_rating.present? %>
            <b><%= place.comments.last.humanized_rating %></b> -
          <% end %>
          <%= place.comments.last.message %>
          <small><%= place.comments.last.user.email %></small>
        </blockquote>

      </div>
    <% end %>

    <%= image_tag(place.photos.first.picture.url, class: 'mx-auto d-block photo-images') %>
    <p class="text-center"><%= place.photos.first.caption %></p>

  </div>
<% end %>

<div class="pagination m-5 float-right">
  <%= will_paginate @places, renderer: WillPaginate::ActionView::BootstrapLinkRenderer, previous_label: h("<"), next_label: h(">"), inner_window: 1, outer_window: 0 %>
</div>